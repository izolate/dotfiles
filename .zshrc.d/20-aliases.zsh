# Use Neovim instead of Vim (RIP brammool)
alias vi='nvim'
alias vim='nvim'

# Copy interactive/verbose
alias cp='cp -iv'

# Move interactive/verbose
alias mv='mv -iv'

# Create directory recursively/verbose
alias mkdir='mkdir -pv'

# Edit files easily
alias edit=$EDITOR

# Some ls aliases
# alias ls='exa'
alias ll='ls -Fla'
alias la='ls -A'
alias l='ls -CF'

# Move up directories with greater ease
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

# Use rip-grep instead of grep
alias grep=rg
